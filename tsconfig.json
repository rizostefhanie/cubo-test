{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["src/typings"]
    
  },
  "compileOnSave": true,
  "include": ["src", "types", "lib/typings"]
}